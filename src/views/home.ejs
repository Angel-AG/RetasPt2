<%- include("partials/header") %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/tiny-slider.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.2/min/tiny-slider.js"></script>

<div class="full-page-with-nav container-fluid">
    <div class="row h-100">
        <div class='row mt-3 mt-md-5'>
            <h2>Categorías</h2>
        </div>
        
        <!-- Slider (Carousel) -->
        <section id="slider">
            <div class="container">
                <div class="subcontainer">
                    <div class="slider-wrapper">
                        <div>
                            <!-- <h2>Categorías</h2> -->
                            <div class="controller">
                                <div id="controls">
                                    <button id="previous-cat" class="btn-lg btn-circle btn-primary previous"><</button>
                                    <button id="next-cat" class="btn-lg btn-circle btn-primary next">></button>
                                </div>
                            </div>
                        </div>                            
                    </div>
                    <br>
                    <div class="my-slider">
                        <% for (var i = 0; i < categories.length; i++)  {   %>
                        <div>
                            <div class="slide">
                                <div class="card" style="height: 9rem; width: 16rem;">
                                    <img class="card-img" src=<%=categories[i].imgSrc%> >  alt="Category img" style="height: 100%; object-fit: cover;">
                                    <div class="card-img-overlay">
                                        <div class="d-flex flex-column align-items-center justify-content-center" style="height: 100%;">
                                            <button class="btn btn-dark rounded-pill fw-bold py-auto px-4 py-2" type="button"><%= categories[i].name%></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%  } %>                        
                    </div>
                </div>
            </div>
        </section>
        <hr />
      <div class='row mt-2 px-3 px-lg-5 pt-2'>
        <h2>Todas las retas</h2>
      </div>
      <div class="card-group py-lg-5">
            <div class="row row-col-3 me-md-2 pt-3">
                <% retas.forEach(function(reta) { %>
                    <div class="card text-white mb-4 col-4">
                        <img src="/images/portero_retas.jpg" class="card-img" alt="" style= "height: 36vh; object-fit: cover; overflow: auto; "/>
                        <div class="card-img-overlay d-flex flex-column align-items-start">
                            <h5 class="card-title bg-dark rounded-pill py-2 px-4"><a href="/retas/<%= reta.id %>"> <%= reta.title %> </a></h5>
                        </div>
                        <div class="card-footer bg-light text-dark">
                            <div class="row mb-2">
                                <div class="col">
                                    <p> <%= reta.location %> </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <p> <%= reta.time %> </p>
                                </div>
                                <div class="col">
                                    <p> <%= reta.date%></p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
       </div>
    </div>
</div>

<link rel="stylesheet" href="/css/slider.css">
<script src="/js/slider.js"></script>
<script src="/js/home.js"></script>

<%- include("partials/footer") %>